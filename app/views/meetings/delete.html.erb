<% @page_title = "Delete Meeting" %>

<%= link_to("<< Back to List", meetings_path(:affiliate_id => @affiliate.id), :class => 'back-link') %>

<div class="meetings delete">
  <h2>Delete Meeting</h2>

  <%= form_for(@meeting, :url => meeting_path(@meeting, :affiliate_id => @affiliate.id), :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this meeting?</p>

    <p class="reference-name"><%= f.object.title %></p>

    <div class="form-buttons">
      <%= f.submit("Delete Meeting") %>
    </div>

  <% end %>
</div>

